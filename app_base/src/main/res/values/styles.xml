<resources>

    <style name="BaseStyle">
    </style>

    <style name="BaseStyle.btn" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_big</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseStyle.edt">
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textColor">@color/text_body_color</item>
        <item name="android:textSize">@dimen/txt_size_middle</item>
    </style>


    <style name="BaseStyle.txt">
    </style>

    <style name="BaseStyle.txt.title">
        <item name="android:textColor">@color/text_title_color</item>
        <item name="android:textSize">@dimen/txt_size_big</item>
    </style>


    <style name="BaseStyle.txt.body">
        <item name="android:textColor">@color/text_body_color</item>
        <item name="android:textSize">@dimen/txt_size_middle</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
</resources>
